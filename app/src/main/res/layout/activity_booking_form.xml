<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.BookingForm">

    <ImageView
        android:id="@+id/navigation_bar"
        android:layout_width="361dp"
        android:layout_height="61dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/BCIT_navigation_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bcit_navigation_bar" />

    <TextView
        android:id="@+id/booking_detail"
        android:layout_width="360dp"
        android:layout_height="63dp"
        android:scaleType="fitXY"
        android:text="@string/booking_details"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/navigation_bar"
        app:layout_constraintTop_toBottomOf="@id/navigation_bar" />

    <TextView
        android:id="@+id/blank1"
        android:layout_width="360dp"
        android:layout_height="15dp"
        android:background="@color/BCIT"
        android:scaleType="fitXY"
        android:text=""
        app:layout_constraintStart_toStartOf="@id/booking_detail"
        app:layout_constraintTop_toBottomOf="@id/booking_detail" />

    <TextView
        android:id="@+id/blank2"
        android:layout_width="10dp"
        android:layout_height="30dp"

        android:text=""
        android:background="@color/BCIT"
        app:layout_constraintStart_toStartOf="@id/blank1"
        app:layout_constraintTop_toBottomOf="@id/blank1" />

    <TextView
        android:id="@+id/room_nu_service"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:background="@color/BCIT"
        android:text="@string/room_nu_service"
        app:layout_constraintStart_toEndOf="@id/blank2"
        app:layout_constraintTop_toBottomOf="@id/blank1" />
    <TextView
        android:id="@+id/room_nu_output"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:text=""
        app:layout_constraintStart_toEndOf="@id/room_nu_service"
        app:layout_constraintTop_toBottomOf="@id/blank1" />
    <TextView
        android:id="@+id/blank3"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:background="@color/BCIT"
        android:scaleType="fitXY"
        android:text=""
        app:layout_constraintStart_toEndOf="@id/room_nu_output"
        app:layout_constraintTop_toBottomOf="@id/blank1" />
    <TextView
        android:id="@+id/blank4"
        android:layout_width="360dp"
        android:layout_height="10dp"
        android:background="@color/BCIT"
        android:scaleType="fitXY"
        android:text=""
        app:layout_constraintStart_toStartOf="@id/blank2"
        app:layout_constraintTop_toBottomOf="@id/blank2" />

    <TextView
        android:id="@+id/start"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="@color/BCIT"
        android:scaleType="fitXY"
        android:text="@string/start"
        android:textColor="@color/white"
        android:gravity="center"

        app:layout_constraintStart_toStartOf="@id/blank4"
        app:layout_constraintTop_toBottomOf="@id/blank4" />
    <TextView
        android:id="@+id/blank5"
        android:layout_width="15dp"
        android:layout_height="30dp"
        android:background="@color/BCIT"
        android:scaleType="fitXY"
        android:text=""
        app:layout_constraintStart_toEndOf="@id/start"
        app:layout_constraintTop_toBottomOf="@id/blank4" />
    <TextView
        android:id="@+id/start_output"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:text=""
        app:layout_constraintStart_toEndOf="@id/blank5"
        app:layout_constraintTop_toBottomOf="@id/blank4" />
    <TextView
        android:id="@+id/blank6"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:background="@color/BCIT"
        android:scaleType="fitXY"
        android:text=""
        app:layout_constraintStart_toEndOf="@id/start_output"
        app:layout_constraintTop_toBottomOf="@id/blank4" />
    <TextView
        android:id="@+id/blank7"
        android:layout_width="360dp"
        android:layout_height="10dp"
        android:background="@color/BCIT"
        android:scaleType="fitXY"
        android:text=""
        app:layout_constraintStart_toStartOf="@id/start"
        app:layout_constraintTop_toBottomOf="@id/start" />
    <TextView
        android:id="@+id/end"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="@color/BCIT"
        android:scaleType="fitXY"
        android:text="@string/end"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/blank7"
        app:layout_constraintTop_toBottomOf="@id/blank7" />
    <TextView
        android:id="@+id/blank8"
        android:layout_width="15dp"
        android:layout_height="30dp"
        android:background="@color/BCIT"
        android:scaleType="fitXY"
        android:text=""
        app:layout_constraintStart_toEndOf="@id/end"
        app:layout_constraintTop_toBottomOf="@id/blank7" />
    <TextView
        android:id="@+id/end_output"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:text=""
        app:layout_constraintStart_toEndOf="@id/blank8"
        app:layout_constraintTop_toBottomOf="@id/blank7" />
    <TextView
        android:id="@+id/blank9"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:background="@color/BCIT"
        android:scaleType="fitXY"
        android:text=""
        app:layout_constraintStart_toEndOf="@id/end_output"
        app:layout_constraintTop_toBottomOf="@id/blank7" />
    <TextView
        android:id="@+id/blank10"
        android:layout_width="360dp"
        android:layout_height="10dp"
        android:background="@color/BCIT"
        android:scaleType="fitXY"
        android:text=""
        app:layout_constraintStart_toStartOf="@id/start"
        app:layout_constraintTop_toBottomOf="@id/end" />
    <TextView
        android:id="@+id/date"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="@color/BCIT"
        android:scaleType="fitXY"
        android:text="@string/date"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/blank10"
        app:layout_constraintTop_toBottomOf="@id/blank10" />
    <TextView
        android:id="@+id/blank11"
        android:layout_width="15dp"
        android:layout_height="30dp"
        android:background="@color/BCIT"
        android:scaleType="fitXY"
        android:text=""
        app:layout_constraintStart_toEndOf="@id/date"
        app:layout_constraintTop_toBottomOf="@id/blank10" />
    <TextView
        android:id="@+id/date_output"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:text=""
        app:layout_constraintStart_toEndOf="@id/blank11"
        app:layout_constraintTop_toBottomOf="@id/blank10" />
    <TextView
        android:id="@+id/blank12"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:background="@color/BCIT"
        android:scaleType="fitXY"
        android:text=""
        app:layout_constraintStart_toEndOf="@id/date_output"
        app:layout_constraintTop_toBottomOf="@id/blank10" />
    <TextView
        android:id="@+id/blank13"
        android:layout_width="360dp"
        android:layout_height="10dp"
        android:background="@color/BCIT"
        android:scaleType="fitXY"
        android:text=""
        app:layout_constraintStart_toStartOf="@id/start"
        app:layout_constraintTop_toBottomOf="@id/date" />
    <TextView
        android:id="@+id/name"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="@color/BCIT"
        android:scaleType="fitXY"
        android:text="@string/name"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/blank10"
        app:layout_constraintTop_toBottomOf="@id/blank13" />
    <TextView
        android:id="@+id/blank14"
        android:layout_width="15dp"
        android:layout_height="30dp"
        android:background="@color/BCIT"
        android:scaleType="fitXY"
        android:text=""
        app:layout_constraintStart_toEndOf="@id/name"
        app:layout_constraintTop_toBottomOf="@id/blank13" />
    <TextView
        android:id="@+id/name_output"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:text=""
        app:layout_constraintStart_toEndOf="@id/blank14"
        app:layout_constraintTop_toBottomOf="@id/blank13" />
    <TextView
        android:id="@+id/blank15"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:background="@color/BCIT"
        android:scaleType="fitXY"
        android:text=""
        app:layout_constraintStart_toEndOf="@id/name_output"
        app:layout_constraintTop_toBottomOf="@id/blank13" />
    <TextView
        android:id="@+id/blank16"
        android:layout_width="360dp"
        android:layout_height="15dp"
        android:background="@color/BCIT"
        android:scaleType="fitXY"
        android:text=""
        app:layout_constraintStart_toStartOf="@id/booking_detail"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <CheckBox
        android:id="@+id/terms_and_condition"
        android:layout_width="360dp"
        android:layout_height="63dp"
        android:text="@string/terms_and_conditions"
        android:layout_marginStart="42sp"
        app:layout_constraintStart_toStartOf="@id/booking_detail"
        app:layout_constraintTop_toBottomOf="@id/blank16" />

    <Button
        android:id="@+id/book"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        android:text="@string/book"
        android:gravity="center"
        android:background="@drawable/rounded_corners_blue"
        android:textColor="@color/white"
        android:onClick="onBookingConfirmed"
        app:layout_constraintStart_toStartOf="@id/name_output"
        app:layout_constraintTop_toBottomOf="@id/terms_and_condition"  />
    <Button
        android:id="@+id/back"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:gravity="center"
        android:background="@drawable/rounded_corners_blue"
        android:textColor="@color/white"
        android:layout_marginStart="5sp"
        android:layout_marginTop="12sp"
        app:layout_constraintStart_toStartOf="@id/name_output"
        app:layout_constraintTop_toBottomOf="@id/book"  />
</androidx.constraintlayout.widget.ConstraintLayout>
